<div class="container">
    <form action="/attAction" method="post">
    <div class="row col-3 pb-3">
          <label for="">Date:</label><input type="date" name="todaydate" id="">
        </div>
    <div class="row">
        
    <table class="table">
  <thead>
    <tr>
    
      <th scope="col">Register Number</th>
      <th scope="col">Name</th>
      <th scope="col">Attendance</th>
    </tr>
  </thead>
  <tbody>
    {{#each row}}
    <tr>
      
      <td>{{this.RegNo}}</td>
      <td>{{this.Name}}</td>
      <td><input type="radio" name="{{this.RegNo}}" id="present" value="P" checked><label for="">P</label>
      <input type="radio" name="{{this.RegNo}}" id="absent" value="A"><label for="">A</label></td>
    </tr>
   {{/each}}
  </tbody>
</table>
</div>
<div class="row ">
    <button class="btn-primary">Submit</button>
    </form>
</div>
</div>