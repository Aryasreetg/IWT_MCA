<input type="date" name="today" id="todayDate">
<table>
    <thead>
        <tr>
            <th>Register Number</th>
            <th>Name</th>
            <th>University mail id</th>
            <th>Personal mail id</th>
            <th>Mobile Number</th>
       <!--     <th>Action</th>-->
            <th>Attendance</th>
        </tr>
    </thead>
    <tbody>
        {{#each tabledata}}
        <tr>
           
            <td><div class="edit" contentEditable="true">{{this.reg}}</div></td>
