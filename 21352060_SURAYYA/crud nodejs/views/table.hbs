             <td><input type="radio" data-id="{{this.reg}}" name="{{this.reg}}" value="P" checked><label for="attndnc">P</label>
             <input type="radio"  name="{{this.reg}}" value="A"><label for="attndnc">A</label></td>
  
        </tr>
        {{/each}}
        <tr ><td colspan="7"><button class="addbt">Submit Attendance</button></td></tr>
    </tbody>

</table>

</form>
